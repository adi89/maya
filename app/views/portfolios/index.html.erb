
<%= turbo_stream_from "contacts" %>

<!-- Hero Section -->
<section id="home" class="hero">
  <div class="container hero-content">
    <h1>Shiladitya</h1>
    <p>Actor • Performer • Shadow</p>
    <a href="#contact" class="hero-btn">Into the Night</a>
  </div>
</section>

<div class="neon-divider"></div>

<!-- About Me Section -->
<%= render "about_me"  %>
<div class="neon-divider"></div>

<!-- Resume Section -->
<%= render "resume"  %>

<div class="neon-divider"></div>

<!-- Reel Section -->
<section id="reel" class="page-section reel">
  <div class="container">
    <h2>Demo Reel</h2>
    <div class="video-container">
      <div class="video-placeholder">
        <p>Shadows in Motion</p>
      </div>
    </div>
  </div>
</section>

<div class="neon-divider"></div>

<!-- Photos Section -->
<%= render "photos"  %>

<div class="neon-divider"></div>

<!-- Contact Section -->
<%= turbo_frame_tag "contacts_form" do %>
  <%= render "portfolios/form", contact: @contact %>
<% end %>
