<section id="photos" class="page-section photos">
  <div class="container">
    <h2>Photographs</h2>
    <div class="gallery" data-controller="gallery">
      <% Photo::GALLERY.each.with_index(1) do |image_url, idx| %>
        <div class="gallery-item" data-action="click->gallery#openModal">
          <%= image_tag image_url, alt: sprintf("Photo_%s", idx) %>
        </div>
      <% end %>

      <div id="photoModal" class="modal" data-gallery-target="modal">
        <span class="modal-close" data-action="click->gallery#closeModal">&times;</span>
        <img id="modalImage" class="modal-content" data-gallery-target="modalImage">
      </div>
    </div>
  </div>
</section>
